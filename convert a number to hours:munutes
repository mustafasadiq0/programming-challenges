#include <iostream>
#include<string>

using namespace std;

string TimeConvert(int num) { 

  int hours,minutes;
  string result;
  hours=num/60;
  minutes = num%60;
  result=to_string(hours)+':'+to_string(minutes);
  return result; 
            
}

int main() { 
  
  // keep this function call here
  cout << TimeConvert(gets(stdin));
  return 0;
    
}
